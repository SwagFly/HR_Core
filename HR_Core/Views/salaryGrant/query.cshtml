@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>query</title>
    <link rel="stylesheet" href="../../css/table.css" type="text/css" />
</head>
<body>
    <div>
        <form method="post" action="">
            @{
                int i = 0;
                List<salary_grant> sglist = ViewBag.sg;
                decimal sums = 0;
                decimal shiFa = 0;
                for (var sum = 0; sum < sglist.Count; sum++)
                {
                    sums += (decimal)sglist[sum].salary_standard_sum;
                    shiFa += (decimal)sglist[sum].salary_paid_sum;
                }
                <table width="100%">
                    <tr>
                        <td style="text-align: left">
                            <font color="black">您正在做的业务是:人力资源管理--薪酬发放管理--薪酬发放复核</font>
                            <br><br><br>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: left">
                            薪酬单编号：@sglist[0].salary_standard_id
                            <input type="hidden" name="salaryGrant.salaryGrantId" value="HS1353753198460">
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: left">
                            @{
                                var jg = "";
                                if (sglist[0].first_kind_name != null && sglist[0].first_kind_name != "")
                                {
                                    jg = sglist[0].first_kind_name;
                            <input type="hidden" name="first_kind_id" value="@sglist[0].first_kind_id">
                            <input type="hidden" name="first_kind_name" value="@sglist[0].first_kind_name">
                                }
                                else if (sglist[0].second_kind_name != null && sglist[0].second_kind_name != "")
                                {
                                    jg = sglist[0].second_kind_name;
                            <input type="hidden" name="second_kind_id" value="@sglist[0].second_kind_id">
                            <input type="hidden" name="second_kind_name" value="@sglist[0].second_kind_name">
                                }
                                else if (sglist[0].third_kind_name != null && sglist[0].third_kind_name != "")
                                {
                                    jg = sglist[0].third_kind_name;
                            <input type="hidden" name="third_kind_id" value="@sglist[0].third_kind_id">
                            <input type="hidden" name="third_kind_name" value="@sglist[0].third_kind_name">
                                }
                            }
                            机构：
                            @jg
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: left">
                            本机构总人数:@sglist.Count
                            ，基本薪酬总数:@sums
                            ，实发总额:<span id="salarySum_sum">@sglist[0].salary_paid_sum</span>
                        </td>
                        <td style="text-align: right">
                            登记人:@sglist[0].register
                            登记时间：@sglist[0].regist_time
                        </td>
                    </tr>
                </table>
                <table width="100%" border="1" cellpadding=0 cellspacing=1
                       bordercolorlight=#848284 bordercolordark=#eeeeee
                       class="TABLE_STYLE1">
                    <tr>
                        <td class="TD_STYLE1">
                            <span>序号</span>
                        </td>
                        <td class="TD_STYLE1">
                            <span>档案编号</span>
                        </td>
                        <td class="TD_STYLE1">
                            <span>姓名</span>
                        </td>

                        <td class="TD_STYLE1">
                            出差补助
                        </td>

                        <td class="TD_STYLE1">
                            交通补贴
                        </td>

                        <td class="TD_STYLE1">
                            住房补贴
                        </td>

                        <td class="TD_STYLE1">
                            基本工资
                        </td>

                        <td class="TD_STYLE1">
                            年终奖
                        </td>

                        <td class="TD_STYLE1">
                            误餐补助
                        </td>

                        <td class="TD_STYLE1">
                            奖励金额
                        </td>
                        <td class="TD_STYLE1">
                            销售绩效总额
                        </td>
                        <td class="TD_STYLE1">
                            应扣金额
                        </td>
                        <td class="TD_STYLE1">
                            实发金额
                        </td>
                    </tr>
                    <input type="hidden" name="grantDetails[0].salaryGrantId" value="HS1353753198460">
                    <input type="hidden" id="salaryStandardSum1" name="grantDetails[0].salaryStandardSum" value="1332.0" />
                    @{
                        List<salary_standard_details> detailss = ViewBag.sd;
                        //List<salary_grant_details> grants = ViewBag.sgd;
                    }
                    @foreach (salary_grant_details item in ViewBag.sgd)
                    {
                        <tr class="TD_STYLE2">
                            <td>
                                @item.grd_id
                            </td>
                            <td>
                                @item.human_id
                            </td>
                            <td>
                                @item.human_name
                            </td>
                            @*薪酬标准详情*@
                            <td>
                                @detailss[i].salary
                            </td>
                            <td>
                                @detailss[i].salary
                            </td>
                            <td>
                                @detailss[i].salary
                            </td>
                            <td>
                                @detailss[i].salary
                            </td>
                            <td>
                                @detailss[i].salary
                            </td>
                            <td>
                                @detailss[i].salary
                            </td>
                            @*薪酬发放详情*@
                            <td>
                                @item.bouns_sum
                            </td>
                            <td>
                                @item.sale_sum
                            </td>
                            <td>
                                @item.deduct_sum
                            </td>
                            <td>
                                @item.salary_paid_sum
                            </td>
                        </tr>
                        i++;
                    }
                </table>
                <br>
                        <center>
                            <input type="button" style="width: 200;height: 50;font-size: 20px;font-weight: bold;border-bottom-style: ridge;cursor: pointer" onclick="javascript:window.history.back();" value="返 回">
                        </center>
            }
        </form>
    </div>
</body>
</html>
