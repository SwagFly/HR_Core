
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>I级机构设置 </title>
    <link rel="stylesheet" href="../../css/table.css" type="text/css">
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <script src="~/javascript/vue.js"></script>
</head>
<body>
    <div> 
        
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="添加" class="BUTTON_STYLE1" onclick="window.location.href = 'first_kind_register'" />
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1" id="tb">
                <tr>
                    <td width="20%" class="TD_STYLE1">
                        I级机构编号
                    </td>
                    <td width="20%" class="TD_STYLE1">
                        I级机构名称
                    </td>
                    <td width="25%" class="TD_STYLE1">
                        薪酬发放责任人编号
                    </td>
                    <td width="25%" class="TD_STYLE1">
                        销售责任人编号
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        变更
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        删除
                    </td>
                </tr>


                <tr v-for="(item,i) in nums">
                  
                    <td class="TD_STYLE2">
                        <input type="hidden" name="ffk_id" :value="item.ffk_id"/>
                       {{item.first_kind_id}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.first_kind_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.first_kind_salary_id}}
                    </td>
                    <td class="TD_STYLE2">
                       {{item.first_kind_sale_id}}
                    </td>
                    <td class="TD_STYLE2">
                        <a v-bind:href="['first_kind_change/'+item.ffk_id]">变更</a>
                    </td>
                    <td class="TD_STYLE2">
                        <a v-bind:href="['first_delete/'+item.ffk_id]" onclick="return confirm('亲，你确定要删除吗？')">删除</a>
                    </td>
                </tr>
            </table>
  
    </div>
    @*一级机构查询*@
    <script type="text/javascript">
        $(function () {
            var vm = new Vue({
                el: "#tb",
                data: {
                    nums:null
                },
                methods: {
                    load: function () {
                        var t = this;
                        $.ajax({
                            url: "/client/first_kindSelect",
                            type: "post",
                            data: "",
                            success: function (msg) {
                                var dt = eval(msg);
                                console.info(dt);
                                t.nums = dt;
                            }
                        })  
                    }
                }
            })
            vm.load();//加载
        });
    </script>
</body>
</html>
